<org.dpadgett.compat.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:compat="http://schemas.android.com/apk/res/org.dpadgett.timer"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:divider="@android:drawable/divider_horizontal_dark"
    compat:compat_divider="@android:drawable/divider_horizontal_dark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    compat:compat_showDividers="middle" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <view
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00.000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50sp"
            class="org.dpadgett.widget.TimerTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="20sp"
                android:layout_height="10sp"
                android:layout_weight="2" />

            <view
                android:id="@+id/liveLapTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="lap: 00:00:00.000"
                android:textAppearance="?android:attr/textAppearanceMedium"
            	class="org.dpadgett.widget.TimerTextView" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="20sp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/startButton"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start" />

            <LinearLayout
                android:layout_width="20sp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset" />

            <LinearLayout
                android:layout_width="20sp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" >

        <org.dpadgett.compat.LinearLayout
            android:id="@+id/lapTimesView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@android:drawable/divider_horizontal_dark"
		    compat:compat_divider="@android:drawable/divider_horizontal_dark"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle"
            compat:compat_showDividers="middle" />
    </ScrollView>

</org.dpadgett.compat.LinearLayout>